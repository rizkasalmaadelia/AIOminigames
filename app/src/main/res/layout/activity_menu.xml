<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu"
    android:background="@color/background">
    <ImageButton
        android:id="@+id/x"
        android:src="@drawable/x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="10dp"/>

    <ImageButton
        android:id="@+id/on"
        android:src="@drawable/on"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:padding="10dp"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_centerVertical="true">
    <Button
        android:id="@+id/togame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play"
        android:background="@drawable/ic_launcher_rounded"
        android:backgroundTint="@color/putih"
        android:textColor="@color/fontmain"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>


    <Button
        android:id="@+id/torule"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/togame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tutorial"
        android:background="@drawable/ic_launcher_rounded"
        android:backgroundTint="@color/putih"
        android:textColor="@color/fontmain"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/tocredit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/torule"
        android:text="Credit"
        android:background="@drawable/ic_launcher_rounded"
        android:backgroundTint="@color/putih"
        android:textColor="@color/fontmain"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>
</RelativeLayout>
</RelativeLayout>