<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    android:weightSum="3"
    
    tools:context=".ChooseAnswer">
    
    <LinearLayout
    android:orientation="horizontal"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:weightSum="3"
    android:layout_height="0dp">
    <ImageView
        android:id="@+id/image_1"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:src="@drawable/pah1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_2"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:src="@drawable/pah2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/image_3"
        android:layout_weight="1"
        android:layout_margin="4dp"
        android:src="@drawable/pah3"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/image_4"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:src="@drawable/pah4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_5"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:src="@drawable/pah10"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_6"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:src="@drawable/pah6"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="0dp">
        <ImageView
            android:id="@+id/image_7"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:src="@drawable/pah7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_8"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:src="@drawable/pah8"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/image_9"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:src="@drawable/pah9"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>